<%- include('./partials/header'); %>

  <body class="container">

    <h5 class="text-center">Astronomy Picture of the Day </h5>
    

      <form id="dateForm" method="GET" class="pull-right">
        Date: <input type="text" id="datepick" name="date" value=<%=data.date%> >
        <input type="submit" name="submit" value="Set">
      </form>

    <h3 >
      <%= data.title %>
    </h3>
   

    <div>
      <p class="text-center">
        <%= data.date%>
      </p>
    </div>
    <div>

    <% if(data.media_type=='image' ){%>
      <img src=<%=data.url %> width="100%" height="500" />
      <%}else{%>
        <iframe src=<%=data.url %> width="100%" height="500" /></iframe>
        <!-- <iframe src="https://www.youtube.com/embed/BEckYJwCJno?rel=0&origin=http://localhost:3000" /> -->
          <%}%>
        </div>
        <br>
            <div>
              <p>
                <b>Explanation : </b> <%= data.explanation %>
              </p>
            </div>

  </body>

  </html>